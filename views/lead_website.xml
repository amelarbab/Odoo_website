<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="new_lead_form" name="New Lead Form">
        <t t-call="website.layout">
            <t t-set="additional_title">Contact Us</t>
            <div id="wrap" class="container">
                <div class="row">
                    <section id="forms">
                        <form action="/website_form/" method="post" data-model_name="crm.lead" data-success_page="/contactus" class="s_website_form form-horizontal container-fluid mt32" enctype="multipart/form-data" data-editable-form="false">
                            <div class="form-group form-field o_website_form_required">
                                <label class="col-md-3 col-sm-4 control-label" for="name">Title</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" class="form-control o_website_form_input" name="name" required=""/>
                                </div>
                            </div>
                            <div class="form-group form-field">
                                <label class="col-md-3 col-sm-4 control-label" for="contact_name">Name</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" class="form-control o_website_form_input" name="contact_name"/>
                                </div>
                            </div>
                            <div class="form-group form-field">
                                <label class="col-md-3 col-sm-4 control-label" for="phone">Phone</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" class="form-control o_website_form_input" name="phone"/>
                                </div>
                            </div>
                             <div class="form-group form-field">
                                <label class="col-md-3 col-sm-4 control-label" for="mobile">mobile</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" class="form-control o_website_form_input" name="mobile"/>
                                </div>
                            </div>
                            <div class="form-group form-field">
                                <label class="col-md-3 col-sm-4 control-label" for="email_from">Email</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" class="form-control o_website_form_input" name="email_from" />
                                </div>
                            </div>
                            <div class="form-group form-field">
                                <label class="col-md-3 col-sm-4 control-label" for="partner_name">Company</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" class="form-control o_website_form_input" name="partner_name" />
                                </div>
                            </div>
                             <div class="form-group form-field">
                                <label class="col-md-3 col-sm-4 control-label" for="function">Job Position</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" class="form-control o_website_form_input" name="function" />
                                </div>
                            </div>
                             <div class="form-group form-field">
                                <label class="col-md-3 col-sm-4 control-label" for="website">Website</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" class="form-control o_website_form_input" name="website"/>
                                </div>
                            </div>
                            <div class="form-group form-field">
                                <label class="col-md-3 col-sm-4 control-label" for="description">Note</label>
                                <div class="col-md-7 col-sm-8">
                                    <textarea class="form-control o_website_form_input" name="description" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7">
                                    <span class="btn btn-primary btn-lg o_website_form_send">Send</span>
                                    <span id="o_website_form_result"></span>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </t>
    </template>
</odoo>
